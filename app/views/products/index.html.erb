<h3>Products</h3>

<% if @products.empty? %>
    <p>No products added to database</p>
<% else %>
    <ul>
      <% @products.each do |product| %>
          <li>
            <div class="row">
              <h4><%= link_to product.name, product %></h4>
              <p>product.price</p>
            </div>
            <div class="row">
              <div class="small-3 columns">PIC</div>
              <div class="small-9 columns">product.description</div>
            </div>
          </li>
          <hr>
      <% end %>
    </ul>
<% end %>

<br>

<%= link_to 'New Product', new_product_path %>
